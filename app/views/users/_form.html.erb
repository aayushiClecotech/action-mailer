<h1 style="color:darkgreen;">New Form</h1>
<%= form_for @user, remote: true do |form| %>
<div>
	<%= form.label :Name %>
	<%= form.text_field :name %>
</div>
<br><br>

<div>
	<%= form.label :Email %>
	<%= form.email_field :email %>
</div>
<br><br>

<div>
	<%= form.label :Password %>
	<%= form.password_field :password %>
</div>
<br><br>
<div>
	<%= form.label :PasswordConfirmation %>
	<%= form.password_field :password_confirmation %>
</div>
<br><br>

<div>
	<%= form.label :Address %>
	<%= form.text_area :address %>
</div>
<br><br>

<div>
	<%= form.label :Age %>
	<%= form.text_field :age %>
</div>
<br><br>

<div>
	<%= form.submit %>
</div>
<br><br>
</div>
<% end %>